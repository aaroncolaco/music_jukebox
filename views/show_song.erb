<link rel="stylesheet" type="text/css" href="/css/show_song.css">	

<div class="song">
	<div class="container">
		<h1><%= @song.title %></h1>
		<h3><%= " by " + @song.artist  + " (#{@song.released_on.strftime("%Y")})"%></h3>
		<h5>Length: <%= "#{@song.length/60}min #{@song.length%60}sec" %></h5>
		<a class="btn btn-link" href="<%= @song.video_link %>">YouTube Video</a>
		<p><%= @song.lyrics %></p>

		<a class="btn btn-primary edit-link" href= <%="/songs/#{@song.id}/edit"%> >Edit</a>

		<form class="hidden-form" method="POST">
			<input type="hidden" name="_method" value="DELETE">
			<input class="btn btn-danger" type="submit" value="Delete">
		</form>

		<a class="btn btn-link back-link" href="/songs">Back to songs</a>
	</div>
</div>
